{
    "name": "phppackage/magic-class",
    "type": "library",
    "description": "A magical PHP class",
    "license": "MIT",
    "keywords": [
        "magic"
    ],
    "homepage": "http://github.com/phppackage/magic-class",
    "authors": [
        {
            "name": "Lawrence Cherone",
            "email": "lawrence@cherone.co.uk",
            "homepage": "http://github.com/phppackage",
            "role": "Owner"
        }
    ],
    "require": {
        "php": "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*"
    },
    "autoload": {
        "psr-4": {
            "PHPPackage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPPackage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --coverage-text"
    },
    "minimum-stability": "stable"
}